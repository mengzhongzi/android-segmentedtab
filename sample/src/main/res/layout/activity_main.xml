<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:background="#60a0f0"

    android:paddingLeft="32dp"
    android:paddingRight="32dp"

    android:layout_height="wrap_content">
    <com.marlonmafra.android.widget.SegmentedTab
        android:id="@+id/segmentedTab"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        app:tabSelectedColor="#f0f0f0"
        app:borderColorSelected="#f0f0f0"
        app:borderColorUnselected="#f0f0f0"
        app:tabUnselectedColor="#00000000"
        app:titleColor="@color/test_tab"
        />
</LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/segmentedTab" />
</RelativeLayout>
